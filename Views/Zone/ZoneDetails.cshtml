    function ondeletezone() {
        var storeid = '@Model.StoreId';
        var zoneid = '@Model.ZoneId';
        var result = confirm('Are you sure want to delete Zone?');
            if (result) {
                var data = {
                    Store_Id: storeid,
                    ZoneId: zoneid,
                }
                $.ajax({
                    type: "POST",
                    url: "/Zone/DeleteZone",
                    data: data,
                    //contentType: "application/json; charset=utf-8",
                    //dataType: "json",
                    success: function (response) {
                        debugger
                        if (response.result == 'Redirect')
                            window.location.href = response.url;
                        //$("#divSuccess").attr("style='display:visible'");
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            } 
    }

    $("body").on("click", "#datatable4 #btnDeleteZipcode", function () {
        var storeid = '@Model.StoreId';
        var zoneid = '@Model.ZoneId';
        var result = confirm('Are you sure want to delete Zipcode?');
            if (result) {
                var row = $(this).closest("tr");
                var zipcode = row.find("span").html();

                var data = {
                    StoreId: storeid,
                    ZoneId: zoneid,
                    Zipcode: zipcode,
                }

                $.ajax({
                    type: "POST",
                    url: "/Zone/DeleteZoneZipcode",
                    data: data,
                    success: function (response) {
                        if (response == 'Zipcode Deleted Sucessfully') {
                            if ($("#datatable4 tr").length > 2) {
                                row.remove();
                            }
                            alert(response);
                        }
                        else {
                            alert("Something went wrong.");
                        }
                         
                    }
                });
            } 
    });

</script>