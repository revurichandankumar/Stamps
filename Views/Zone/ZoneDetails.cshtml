@model OneposStamps.Models.GetZones
@{
    ViewBag.Title = "ZoneDetails";
}

<body data-layout="horizontal" class="dark-topbar">
    <div class="page-wrapper">
        <!-- Page Content-->
        <div class="page-content">

            <div class="container-fluid">
                <!-- Page-Title -->
                <div class="row justify-content-center">
                    <div class="col-sm-9">
                        <div class="page-title-box d-flex align-items-center">
                            <a onclick="openhomeview()" class="btn btn-outline-primary btn-round waves-effect waves-light mr-3"><i class="mdi mdi-keyboard-backspace mr-2"></i>Back</a>
                            <h4 class="page-title font-weight-bold">@Model.ZoneName <span class="btn table-btn btn-dark">@Model.Carriername</span> <span class="btn table-btn btn-info">@("$ ")@(Model.Shipmentfee)</span></h4>
                            <a href="@Url.Action("EditZone", "Zone")?Store_Id=@Model.StoreId&ZoneId=@Model.ZoneId" class="btn btn-primary ml-auto btn-sm mr-2">Edit Zone</a>
                            @*<button class="btn btn-primary ml-auto btn-sm mr-2">Edit Zone</button>*@
                            <button class="btn btn-danger btn-sm mr-2" id="btnDelete" name="btnDelete" onclick="ondeletezone()">Delete Zone</button>
                            <a onclick="openaddzipview()" style="color:white" class="btn btn-dark btn-sm">Add Zipcodes</a>

                            <div class="btn-group ml-3" aria-label="Basic example" role="group">
                                <a href="@Url.Action("GetZonesData", "Zone")?StoreId=@Model.StoreId&ZoneId=@Model.PreviousZoneId" class="btn btn-outline-primary"><i class="mdi mdi-arrow-left-bold"></i></a>
                                <a href="@Url.Action("GetZonesData", "Zone")?StoreId=@Model.StoreId&ZoneId=@Model.NextZoneId" class="btn btn-outline-primary"><i class="mdi mdi-arrow-right-bold"></i></a>
                            </div>
                        </div><!--end page-title-box-->
                    </div><!--end col-->

                </div>
                <!-- end page title end breadcrumb -->

                <div class="row justify-content-center">
                    <div class="col-sm-9">

                        <div class="card">
                            <div class="card-body">

                                <div action="" class="d-flex mb-5">
                                    <div class="form-group col mb-0">
                                        <label for="">Zip Code</label>
                                        <input type="text" class="form-control" name="searchvalue" id="txtZipcode" placeholder="Zip Code" />
                                    </div>

                                    <div class="form-group col mb-0">
                                        <label for="">State</label>
                                        <input type="text" class="form-control" name="searchvalue" id="txtState" placeholder="State name" />
                                    </div>
                                    <div class="form-group col mb-0">
                                        <label for="">City</label>
                                        <input type="text" class="form-control" name="searchvalue" id="txtCity" placeholder="City name" />
                                    </div>
                                    <div class="col-auto align-self-end">
                                        <button class="btn btn-primary" onclick="onfilterclick()">Filter</button>
                                    </div>
                                    <div class="form-group col-auto mb-0 pt-4 mt-2">
                                        <a href="#" class="btn btn-link btn-sm text-primary" onclick="onclearfilterclick()">Clear Filters</a>
                                    </div>
                                </div>
                                    <div id="divZipcodeList">
                                        @{ Html.RenderPartial("_ZoneZipCodeList", Model); }
                                    </div>

                                </div>
                        </div>


                    </div>


                </div>

            </div><!-- container -->

        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->
</body>

<script>
     function openhomeview() {
        var storeids = '@Model.StoreId';
        window.location.href = '@Url.Action("Index", "Zone")?store=' + storeids;
    }

    function openaddzipview() {
        var storeid = '@Model.StoreId';
        var zoneid = '@Model.ZoneId';
        window.location.href = '@Url.Action("AddZipCodes", "ZipCode")?StoreId=' + storeid + '&ZoneId=' + zoneid; //+ '&StateName=CA'
    }
        
    function onfilterclick() {

        var $filterableRows = $("#datatable4 tbody tr");
        var $inputs = $('input[name="searchvalue"]');

        $filterableRows.hide().filter(function () {
            return $(this).find('td').not(':first, :last').filter(function () {

                var tdText = $(this).text().toLowerCase(),
                    inputValue = $('#' + $(this).data('input')).val().toLowerCase();

                return tdText.indexOf(inputValue) != -1;

            }).length == $(this).find('td').length - 2;
        }).show();

    }

    function onclearfilterclick() {

        $("#txtZipcode").val("");
        $("#txtState").val("");
        $("#txtCity").val("");

        var $filterableRows = $("#datatable4 tbody tr");
        var $inputs = $('input[name="searchvalue"]');

        $filterableRows.hide().filter(function () {
            return $(this).find('td').not(':first, :last').filter(function () {

                var tdText = $(this).text().toLowerCase(),
                    inputValue = $('#' + $(this).data('input')).val().toLowerCase();

                return tdText.indexOf(inputValue) != -1;

            }).length == $(this).find('td').length - 2;
        }).show();
    }

