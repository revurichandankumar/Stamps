@model OneposStamps.Models.AddZones

@{
    var storeInfo = Session["StoreInfo"] == null ? new OneposStamps.Models.Store() : (OneposStamps.Models.Store)Session["StoreInfo"];
    ViewBag.Title = "AddZone";
}

<body data-layout="horizontal" class="dark-topbar">


    <div class="page-wrapper">
        <!-- Page Content-->
        <div class="page-content">

            <div class="container-fluid">
                <!-- Page-Title -->
                <div class="row justify-content-center">
                    <div class="col-sm-4">
                        <div class="page-title-box d-flex align-items-center">
                            <a onclick="openhomeview()" class="btn btn-outline-primary btn-round waves-effect waves-light mr-3"><i class="mdi mdi-keyboard-backspace mr-2"></i>Back</a>
                            <h4 class="page-title font-weight-bold">Add Zone</h4>
                        </div><!--end page-title-box-->
                    </div><!--end col-->

                </div>
                <!-- end page title end breadcrumb -->

                <div class="row justify-content-center">
                    <div class="col-sm-4">

                        <div class="card">
                            <div class="card-body">

                                <form action="" id="frmZone" class="mb-5">
                                    <div class="form-group">
                                        <label for="txtZone">Zone Name</label>
                                        <input type="text" id="txtZone" class="form-control" placeholder="Zone name" />
                                    </div>
                                    <div class="form-group">
                                        <label for="drlCarrier">Carrier Name</label>
                                        <select name="drlCarrier" id="drlCarrier" class="form-control">
                                            <option value="0">Select Carrier</option>
                                            @foreach (var item in Model.CarrierList)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtShipFee">Shipment Fee</label>
                                                <div class="input-group mb-3">
                                                    <input type="text" id="txtShipFee" class="form-control" placeholder="Payment" />
                                                    <span class="input-group-text">$</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtWeight">Weight</label>
                                                <div class="input-group mb-3">
                                                    <input type="number" id="txtWeight" class="form-control" placeholder="Weight" />
                                                    <span class="input-group-text">LB</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="drlServiceType">Service Type</label>
                                                <select name="drlServiceType" id="drlServiceType" class="form-control">
                                                    <option value="0">Select Service</option>
                                                    @foreach (var item in Model.ServiceList)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="drlPackage">Package</label>
                                                <select name="drlPackage" id="drlPackage" class="form-control">
                                                    <option value="0">Select Package</option>
                                                    @foreach (var item in Model.PackageList)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="">Package Size</label>
                                                <div class="form-group d-flex align-items-center">
                                                    <input type="number" id="txtlength" class="form-control form-control-sm" placeholder="0" />
                                                    <span class="mx-2">(X)</span>
                                                    <input type="number" id="txtbreadth" class="form-control form-control-sm" placeholder="0" />
                                                    <span class="mx-2">(X)</span>
                                                    <input type="number" id="txtheight" class="form-control form-control-sm mr-3" placeholder="0" />
                                                    <span>(in)</span>
                                                </div>
                                            </div>
                                        </div>



                                    </div>

                                    <div class="text-center">
                                        <button id="btnSave" onclick="onsaveZones()" class="btn btn-primary">Add Zone</button>
                                    </div>
                                </form>

                            </div>
                        </div>


                    </div>


                </div>

            </div><!-- container -->

        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->


    <div class="alert alert-success alert-dismissible fade show float-alert" style="display:none" id="divSuccess" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true"><i class="mdi mdi-close"></i></span>
        </button>
        Zone added <strong>Successfully.</strong>
    </div>






</body>

<script>
    function openhomeview() {
        var storeids = "@Model.Store_Id";
        window.location.href = '@Url.Action("Index", "Zone")?StoreId=' + storeids;
    }

    function onsaveZones() {
        debugger
        var data = { 
            ZoneName : $("#txtZone").val(),
            CarrierId: $("#drlCarrier").val(),
            ShipMentFee: $("#txtShipFee").val(),
            Weight: $("#txtWeight").val(),
            ServiceTypeId: $("#drlServiceType").val(),
            PackingId: $("#drlPackage").val(),
            Length: $("#txtlength").val(),
            Breadth: $("#txtbreadth").val(),
            Height: $("#txtheight").val(), 
            Store_Id: '@Model.Store_Id', 
        }

            $.ajax({
                type: "POST",
                url: "/Zone/InsetZones",
                //contentType: "application/json; charset=utf-8",
                //dataType: "json",
                data: data,
                success: function (response) {
                    $("#divSuccess").attr("style='display:visible'");
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });


    }


</script>